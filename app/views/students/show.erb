
<body class="home-page-bkgd">
  <div class="home-page-container">
    <div class="text-center">
        <% students.each do |s| %>
        <h1>Update <%= s.name %> Here</h1>
        <h2>Click on the student to update their information.</h2>
        <% if student.user_id == User.id %>
        <form method="PATCH" action="/student/<%= s.id %>">
          <input id="hidden" type="hidden" name="_method" value="patch">
            <div class="form-group">
              <label for="name">Name *</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= s.name %>" required>
            </div>
           <div class="form-group">
              <label for="age">Age *</label>
              <input type="text" class="form-control" id="age" name="age" value="<%= s.age %>" required>
          </div>
        <a class="btn btn-info btn-sm" href="/student/<%= s.id %>/edit" role="button">Edit Student</a>
        <% end %>
        </form>
        <br><br>
        <form method="POST" action="/student/<%= s.id %>/delete">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
        <% end %>
    </div>
  </div>
</body>